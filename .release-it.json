{
	"git": {
		"commitMessage": "chore: release v${version}",
		"requireCommits": true
	},
	"github": {
		"autoGenerate": true,
		"release": true,
		"releaseName": "v${version}"
	},
	"npm": { "publishArgs": ["--access public"] },
	"plugins": {
		"@release-it/conventional-changelog": {
			"infile": "CHANGELOG.md",
			"preset": "angular"
		}
	}
}
